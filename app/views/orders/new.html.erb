<div class="login">
  <div class="container">
    <div class="form">
	    <h1>Take my order</h1>
	    <%= form_for @order do |f| %>
	 			<%= f.collection_select :menu_id, Menu.all, :id, :title %>
	 			<%= f.hidden_field :user_id, value: current_user.id %>
		  	<%= f.submit "I want this", class: "btn-submit" %>
 			<% end %>
    </div>
  </div>
</div>