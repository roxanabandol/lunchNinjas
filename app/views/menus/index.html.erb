<h2>Meniuri</h2>

<table border=1>
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Felul 1</th>
    <th>Felul 2</th>
    <th>Desert</th>
    <% if current_user %> 
      <th colspan="4"></th>
    <% end %>
  </tr>
<p style="display:none"><%= i=1 %></p>
<% @menus.each do |menu| %>
    <tr>
      <td><%= i %></td>
      <td><%= menu.title %></td>
      <td><%= menu.d1 %></td>
      <td><%= menu.d2 %></td>
      <td><%= menu.desert %></td>
      <% if current_user %> 
        <td><%= link_to 'Show', menu_path(menu) %></td>
        <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
        <td><%= link_to 'Destroy', menu_path(menu),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Order', new_order_path %></td>
      <% end %>
    </tr>
    <p style="display:none"><%= i+=1 %></p>
  <% end %>
  </table>
<br />
  <table>
    <tr>
      <th>ID</th>
      <th>User</th>
      <th>Comanda</th>
      <th colspan="3"></th>
    </tr>
    <p style="display:none"><%= i=1 %></p>
    <% @orders.each do |ord| %>
    <tr>
      <td><%= i %></td>
      <td><%= ord.user %></td>
      <td><%= ord.menu %></td>
    </tr>
    <p style="display:none"><%= i+=1 %></p>
  <% end %>
  </table>
<br />
<%= link_to 'New menu', new_menu_path %>